# Example environment file for Docker deployment
# Copy this file to .env and fill in your values

# Sentry Configuration
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ORG=your_sentry_org
VITE_SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Server Configuration
VITE_SERVER_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/fullstack

# Authentication
BETTER_AUTH_SECRET=your_secure_secret_here_min_32_chars

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
RESEND_API_KEY=your_resend_api_key
VERCEL_API_KEY=your_vercel_api_key

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fullstack

# Optional: NVIDIA GPU Configuration
# CUDA_VISIBLE_DEVICES=0,1  # Specify which GPUs to use
# NVIDIA_DRIVER_CAPABILITIES=compute,utility,graphics